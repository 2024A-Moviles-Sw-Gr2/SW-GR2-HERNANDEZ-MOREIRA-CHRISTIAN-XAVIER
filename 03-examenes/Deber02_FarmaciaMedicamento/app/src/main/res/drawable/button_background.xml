<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#795548"/> <!-- Café oscuro al presionar -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#8D6E63"/> <!-- Café claro por defecto -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
